{
    "compilerOptions": {
      "target": "es6",                          
      "module": "commonjs",                    
      "lib": ["es6"],                     
      "allowJs": true,
      "outDir": "build",
      "declaration": true,                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
    },
    "exclude": ["node_modules"],
    "include": [
      "./src/**/*.ts"
    ]
  }